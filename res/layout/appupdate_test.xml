<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    >
    <!--第一排-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dialog_title_id"
        >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.1"
            android:src="@drawable/smiling_face"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:lineSpacingExtra="1.5dp"
            android:text="@string/dialog_title"
            android:textSize="@dimen/size_20"
            android:textColor="@color/dialog_title_color"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.1"
            android:src="@drawable/dialog_cancel"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_horizontal_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title_id"
        android:layout_marginTop="5dp"
        >
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_weight="0.95"
        android:layout_height="1dp"
        android:background="#F4F4F4"
        android:text="@string/update_latest"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_horizontal_id"
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_version_id"
        >

        <TextView
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_app_version_tips"
            android:textSize="@dimen/size_18"
            android:textColor="@color/dialog_version_color"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/app_version_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V1.0.2"
            android:textSize="@dimen/size_18"
            android:textColor="@color/dialog_version_color"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_warning_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_version_id"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_app_version_warning_net"
            android:layout_marginLeft="27dp"
            android:textSize="16dp"
            android:textColor="@color/dialog_version_warning_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_app_version_warning"
            android:layout_marginLeft="27dp"
            android:textSize="16dp"
            android:textColor="@color/dialog_version_warning_color"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_icon_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_warning_id"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/yishenqing_icon"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_progress_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_icon_id"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_app_progress_value"
            android:textSize="16dp"
            android:textColor="#1ABC9A"
        />
        <TextView
            android:id="@+id/dialog_progress_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#1ABC9A"
            android:text="68%"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_progress_id"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            />
        <Button
            android:id="@+id/dialog_button_redownload_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/dialog_button_redownload"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            />
        <Button
            android:id="@+id/dialog_button_manual_installation_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/dialog_button_manual_installation"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            />
    </LinearLayout>
</RelativeLayout>
